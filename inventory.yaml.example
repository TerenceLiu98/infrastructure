all:
  hosts:
    server1.example.com:
      ansible_user: admin
      ansible_port: 2222
    server2.example.com:
      ansible_user: admin
      ansible_port: 2222

  children:
    webservers:
      hosts:
        web1.example.com:
          ansible_user: webadmin
        web2.example.com:
          ansible_user: webadmin

    dbservers:
      hosts:
        db1.example.com:
          ansible_user: dbadmin
        db2.example.com:
          ansible_user: dbadmin
          ansible_ssh_private_key_file: /path/to/private/key
